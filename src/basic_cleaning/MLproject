name: basic_cleaning
conda_env: conda.yml

entry_points:
  main:
    parameters:

      input_artifact:
        description: Fully qualified name for the input artifact
        type: str

      output_artifact:
        description: The name for the output artifact
        type: str

      output_type:
        description: The type for the output artifact
        type: str
        default: raw_data

      output_description:
        description: A description for the output artifact
        type: str

      min_price:
        description: The minimum price to consider
        type: str
        
      max_price:
        description: The maximum price to consider
        type: str


    command: >-
        python run.py  --input_artifact {input_artifact}  --output_artifact {output_artifact}  --output_type {output_type}  --output_description {output_description}  --min_price {min_price}  --max_price {max_price} 
